{
  "name": "thesis-copilot",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for the Thesis Copilot platform.",
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "test:integration": "vitest run tests/integration",
    "typecheck": "pnpm -r typecheck",
    "firebase:emulator": "cd infra/firebase && firebase emulators:start",
    "firebase:seed": "cd infra/firebase && npm run seed",
    "firebase:reset": "cd infra/firebase && npm run reset",
    "dev:full": "concurrently \"npm run firebase:emulator\" \"sleep 5 && pnpm -r --parallel dev\""
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
