{
  "name": "firebase-setup",
  "version": "1.0.0",
  "description": "Firebase emulator setup and seeding for Thesis Copilot",

  "scripts": {
    "emulator": "firebase emulators:start --only auth,firestore,storage,ui",
    "emulator:seed": "firebase emulators:start --only auth,firestore,storage,ui --import=./seed-data --export-on-exit=./seed-data",
    "seed": "node seed/seed-data.js",
    "reset": "firebase emulators:exec --only firestore 'echo Firestore cleared'",
    "test:setup": "firebase emulators:exec --only auth,firestore,storage 'npm run seed'"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}