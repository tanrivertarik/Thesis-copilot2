rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(resource).data.owner == request.auth.uid;

service firebase.storage {
  match /b/{bucket}/o {
    // Sources uploads - users can only upload to their own directories
    match /sources/{userId}/{sourceId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow unrestricted access during emulator development
    match /{allPaths=**} {
      allow read, write: if request.auth.token.firebase.sign_in_provider == 'custom';
    }
  }
}